<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.admin.casinogames" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".CasinoLobbyActivity"
            android:label="@string/title_activity_casino_lobby"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".DiceGameActivity"
            android:label="@string/title_activity_dice_game"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".PokerActivity"
            android:label="@string/title_activity_poker"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".SettingActivity"
            android:label="@string/title_activity_setting"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
