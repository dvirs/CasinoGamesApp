<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background = "@drawable/table"
    tools:context=".MainActivity">

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/cards"
        android:background="@drawable/cards"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top" />

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/user_card1"
        android:layout_gravity="center_horizontal|top" />

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/user_card2"
        android:layout_gravity="center_horizontal|top" />

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/flop_card1"
        android:layout_gravity="center_horizontal|top" />

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/flop_card2"
        android:layout_gravity="center_horizontal|top" />

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/flop_card3"
        android:layout_gravity="center_horizontal|top" />

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/flop_card4"
        android:layout_gravity="center_horizontal|top" />

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/flop_card5"
        android:layout_gravity="center_horizontal|top" />

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/dealer_card1"
        android:layout_gravity="center_horizontal|top" />

    <fr.castorflex.android.flipimageview.library.FlipImageView
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:id="@+id/dealer_card2"
        android:layout_gravity="center_horizontal|top" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|bottom">

        <TextView
            android:layout_width="171dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Bet:"
            android:id="@+id/bet_poker_txt"
            android:layout_gravity="left|center_vertical"
            android:layout_marginBottom="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ff040404" />

        <SeekBar
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:id="@+id/money_poker"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_alignTop="@+id/bet_poker_txt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="54dp"
            android:layout_marginStart="54dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="play"
            android:id="@+id/playBtn"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fold"
            android:id="@+id/foldBtn"
            android:layout_gravity="right|bottom"
            android:layout_toLeftOf="@+id/checkBtn"
            android:layout_toStartOf="@+id/checkBtn"
            android:layout_alignTop="@+id/checkBtn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check"
            android:id="@+id/checkBtn"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/playBtn"
            android:layout_toStartOf="@+id/playBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_bet_title"
            android:id="@+id/total_bet_title"
            android:layout_below="@+id/money_poker"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ff040404" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/demo_money"
            android:id="@+id/betTV"
            android:layout_below="@+id/money_poker"
            android:layout_toRightOf="@+id/total_bet_title"
            android:layout_toEndOf="@+id/total_bet_title"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:textColor="#ff040404" />
    </RelativeLayout>


</FrameLayout>
