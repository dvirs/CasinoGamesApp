<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background = "@drawable/background"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/register"
        android:id="@+id/register_txt"
        android:textSize="30dp"
        android:textIsSelectable="false"
        android:textColor="#ffffffec"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/user_name"
        android:id="@+id/userName_txt_reg"
        android:textSize="20dp"
        android:textColor="#ffffffec"
        android:layout_below="@+id/register_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userName_reg"
        android:textSize="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/userName_txt_reg"
        android:layout_alignRight="@+id/register_txt"
        android:layout_alignEnd="@+id/register_txt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/password"
        android:id="@+id/password_reg"
        android:textSize="20dp"
        android:layout_below="@+id/userName_txt_reg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:textColor="#ffffffec"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/password_txt_reg"
        android:textSize="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/password_reg"
        android:inputType="textPassword"
        android:layout_alignRight="@+id/rePassword_txt_reg"
        android:layout_alignEnd="@+id/rePassword_txt_reg" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/re_password"
        android:id="@+id/rePassword_reg"
        android:textSize="20dp"
        android:layout_below="@+id/password_reg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:textColor="#ffffffec"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rePassword_txt_reg"
        android:textSize="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rePassword_reg"
        android:inputType="textPassword"
        android:layout_alignRight="@+id/register_txt"
        android:layout_alignEnd="@+id/register_txt" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:id="@+id/singUp_btn_reg"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:background="#ff0c0c0c"
        android:alpha="0.5"
        android:layout_alignTop="@+id/rePassword_txt_reg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/rePassword_txt_reg" />

</RelativeLayout>
